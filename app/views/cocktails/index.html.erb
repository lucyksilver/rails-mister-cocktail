
<div class="container">

<h6><%= link_to 'Add a new cocktail', new_cocktail_path %></h6>

<div class="cards">
<% @cocktails.each do |cocktail| %>
  <div class="card-category p-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key %>)">
    <%= link_to cocktail.name, cocktail_path(cocktail) %><br>

  </div>
<% end %>

</div>
</div>
